@{ 
    Exception ex = ViewBag.Exception;
    string error = ex?.ToString() ?? "No Error Available";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Error</title>
</head>
<body>
    <hgroup>
        <h1>Error.</h1>
        <h2>An error occurred while processing your request.</h2>
        The Details are:
        <p>
            @error
        </p>
    </hgroup>
</body>
</html>
